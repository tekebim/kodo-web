{% extends 'base.html.twig' %}

{% block title %}KODO - Identification{% endblock %}

{% block body %}
    <div>
        <div class="signin">
            <main class="form-signin">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                    <div class="mb-3">
                        Vous êtes identifié en tant que : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se
                            déconnecter</a>
                    </div>
                    {% else %}


                    <h1 class="h3 mb-3 font-weight-normal">S'identifier</h1>

                    <div class="form-floating">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control"
                               autocomplete="email" required autofocus placeholder="name@example.com">
                        <label for="floatingInput">Email</label>
                    </div>
                    <div class="form-floating">
                        <input type="password" name="password" id="inputPassword" class="form-control"
                               autocomplete="current-password" required placeholder="Mot de passe">
                        <label for="floatingPassword">Mot de passe</label>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}

                    <button class="w-100 btn btn-lg btn-primary" type="submit">S'identifier</button>
                    <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
                </form>
                {% endif %}
            </main>
        </div>
    </div>
{% endblock %}
